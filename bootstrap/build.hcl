    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "134a6035691a76ce987473a4d79cc13f15937bcab50eea3ea905a183536c75fe"
    retries = 0
    verbose = false
  }
}
