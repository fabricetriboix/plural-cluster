  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "5c8219fe8c6a5dbe5fef300bb206ea12f0f2c5ffefab10de458b1f313923bf13"
    retries = 0
    verbose = false
  }
}
